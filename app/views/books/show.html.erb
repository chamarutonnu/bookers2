<div class="container">
      <div class="row">
<div class="col-xs-3">

<%= render 'books/new', book: Book.new, user: @book.user %>
</div>

<div class="col-xs-9">

	<h2> Book detail</h2>

<table class="table">
	<tbody>
		<tr>
          <td>
          	<%= link_to user_path(@book.user) do %>
  	        <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %><br>
            <%= @book.user.name %>
  	        <% end %>
          </td>
          <% if @book.user==current_user %>

            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td><%=link_to "Edit", edit_book_path(@book.id), class: "btn-sm btn-success" %></td>
            <td><%=link_to "Destroy", book_path(@book.id), class: "btn-sm btn-danger", method: :delete, data: {confirm: "ほんとに消しますか？"} %></td>
            <% else %>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>

            <% end %>


        </tr>
    </tbody>
</table>
</div>
</div>
</div>





